---
const technologies = [
  "python",
  "mysql",
  "postgresql",
  "powerbi",
  "excel",      // Indispensable para análisis rápido
  "powerpoint", // Clave para presentaciones ejecutivas
  "pandas",
  "git",
  "astro",      // Tu portafolio está hecho aquí
  "tailwindcss",
  "html5",
  "css3",
  "javascript",
  "tableau",
];
---

<span class="text-lg font-medium text-[var(--white-icon)] group-hover:text-[var(--white)]">
  {
    tech === "powerbi" ? "Power BI" : 
    tech === "powerpoint" ? "PowerPoint" : 
    tech === "html5" ? "HTML5" : 
    tech === "css3" ? "CSS3" : 
    tech === "excel" ? "Excel" :
    tech.charAt(0).toUpperCase() + tech.slice(1)
  }
</span>

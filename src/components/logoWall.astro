---
const technologies = [
  "python",
  "excel",
  "powerbi",
  "sql",
  "pandas",
  "powerpoint",
];

const getTechName = (tech: string) => {
  const names: Record<string, string> = {
    python: "Python",
    excel: "Excel",
    powerbi: "Power BI",
    sql: "SQL",
    pandas: "Pandas",
    powerpoint: "PowerPoint",
  };
  return names[tech] || tech;
};
---

<div class="w-full py-10 overflow-hidden bg-transparent">
  <div class="flex flex-wrap justify-center gap-8 md:gap-16 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
    {
      technologies.map((tech) => (
        <div class="flex items-center gap-2 group">
          <img 
            src={`/svg/${tech}.svg`} 
            alt={tech} 
            class="h-8 md:h-10 w-auto transition-transform group-hover:scale-110"
            onerror="this.style.display='none'"
          />
          <span class="text-[var(--white-icon)] font-medium text-sm md:text-base uppercase tracking-widest">
            {getTechName(tech)}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style>
  /* Animaci√≥n opcional por si quieres que se muevan */
  div {
    user-select: none;
  }
</style>

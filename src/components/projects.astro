---
import { Image } from "astro:assets";
import bootcampProjectImg from "../../public/car_analyst.png";

interface Project {
  title: string;
  description: string;
  tags: string[];
  image: ImageMetadata;
  link: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Car Market Strategic Analysis", 
    description: "Desarrollé esta plataforma para resolver la falta de transparencia en la fijación de precios de vehículos usados. Mediante el análisis de +10,000 registros, identifiqué que factores como el tipo de combustible y la condición impactan hasta un 25% en el valor de reventa, permitiendo decisiones de compra basadas en datos estadísticos y no en intuición.",
    tags: ["Python", "Streamlit", "Pandas", "Plotly", "Business Intelligence"],
    image: bootcampProjectImg as ImageMetadata, 
    link: "https://github.com/JToro1998/PROYECTO-SPRINT-7", 
    status: "Deployed App",
  }
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Portfolio</h2>
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-8 gap-4">
        <h3 class="text-4xl md:text-5xl font-medium">Featured Work</h3>
        <p class="text-[var(--white-icon)] max-w-md text-sm md:text-base">
            Análisis de datos aplicados a la resolución de problemas de mercado y optimización de toma de decisiones financieras.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-12">
      {
        projects.map((project) => (
          <div class="group grid grid-cols-1 lg:grid-cols-2 gap-8 items-center bg-[#14141450] p-6 rounded-3xl border border-[#ffffff05] hover:border-[var(--white-icon-tr)] transition-all duration-500">
            
            <div class="rounded-2xl overflow-hidden shadow-2xl transition-all duration-500 bg-[#1d1d1d]">
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 opacity-90 group-hover:opacity-100"
              />
            </div>
            
            <div class="flex flex-col justify-center">
              <div class="flex justify-between items-start mb-4">
                <h4 class="text-3xl font-bold group-hover:text-[var(--sec)] transition-colors tracking-tight">
                    {project.title}
                </h4>
              </div>
              
              <div class="space-y-4 mb-6">
                <p class="text-[var(--white-icon)] text-md leading-relaxed">
                  {project.description}
                </p>
                <div class="bg-[var(--sec)]/5 border-l-2 border-[var(--sec)] p-3 rounded-r-lg">
                  <p class="text-xs text-[var(--sec)] font-semibold uppercase tracking-wider mb-1">Impacto Logrado:</p>
                  <p class="text-sm text-[var(--white-icon)] italic">Reducción del riesgo de sobreprecio mediante una herramienta de filtrado dinámico que segmenta el mercado por depreciación real.</p>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-8">
                {project.tags.map(tag => (
                  <span class="text-xs font-medium bg-[#1a1a1a] text-[var(--sec)] border border-[var(--sec)]/30 px-3 py-1 rounded-full shadow-[0_0_10px_rgba(164,118,255,0.1)]">
                    {tag}
                  </span>
                ))}
              </div>

              <div class="flex gap-4">
                <a
                  target="_blank"
                  href={project.link}
                  class="flex-1 flex justify-center items-center gap-2 text-sm font-bold text-white border border-[var(--white-icon-tr)] py-4 rounded-2xl bg-[#1d1d1d] hover:bg-[var(--sec)] hover:border-[var(--sec)] hover:shadow-[0_0_20px_rgba(164,118,255,0.4)] transition-all duration-300"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" />
                  </svg>
                  View Case Study on GitHub
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    </div>
</section>